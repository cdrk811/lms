<%= form_with model: domain, url: url, method: method, html: { class: 'border rounded w-100 my-3 p-3' }, data: { turbo: 'false' } do |f| %>
  <%= render 'shared/error_messages', resource: domain %>

  <div class="mb-3">
    <%= f.label :name, Domain.human_attribute_name(:name), class: 'form-label' %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="my-3">
    <%= f.label :genre, Domain.human_attribute_name(:genre), class: 'form-label' %>
    <%= f.collection_select(:genre, Domain.genres.to_a, :first, ->(element) {element.first.capitalize}, {}, class: 'form-select') %>
  </div>

  <div class="my-3">
    <%= f.label :status, Domain.human_attribute_name(:status), class: 'form-label' %>
    <div class="">
      <%= f.collection_radio_buttons :status, Domain.statuses, :first, ->(element) {element.first.capitalize}, {}, required: true, class: 'form-check-input ms-3' %>
    </div>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-primary btn-sm text-white' %>
<% end %>
